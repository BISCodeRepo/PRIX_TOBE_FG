<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.prix.homepage.backend.user.mapper.UserMapper">
    <resultMap id="UserResultMap" type="com.prix.homepage.backend.user.domain.User">
    </resultMap>
    <select id="findAll" resultType="com.prix.homepage.backend.user.domain.User">
        SELECT * FROM px_account
    </select>

    <select id="findByEmail" resultMap="UserResultMap" parameterType="string">
        SELECT * FROM px_account WHERE email = #{email}
    </select>

<!--    로그인시 사용. 암호화 방식을 변경함. 기존 : sql password함수. 변경: sql SHA2함수.-->
    <select id="findByEmailAndPassword" resultType="com.prix.homepage.backend.user.domain.User">
        SELECT * FROM px_account WHERE email = #{email} AND password = SHA2(#{email}, 256)
    </select>

</mapper>